<?xml version='1.0'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="car_robot_chassis">

    <!--dummy
    link-->
    <xacro:property name="chassis_length" value="0.14" />
    <xacro:property name="chassis_width" value="0.12" />
    <xacro:property name="chassis_height" value="0.01" />
    <xacro:property name="chassis_mass" value="0.4" />
    <xacro:property name="wheel_radius" value="0.02" />
    <xacro:property name="wheel_height" value="0.01" />
    <xacro:property name="wheel_mass" value="0.2" />


    <!-- <xacro:macro name="box_inertia" params="mass L W H">
        <inertia ixx="${1/12 * mass * (L**2 + W**2 )}" iyy="${1/12 * mass * (H**2 + W**2 )}"
            izz="${1/12 * mass * (L**2 + H**2 )}"
            ixy="0" ixz="0" iyz="0" />
    </xacro:macro> -->

    <xacro:macro name="cylinder_inertia" params="mass R H">
        <inertia ixx="${1/12 * mass * (3 * R**2 + H**2 )}" iyy="${1/12 * mass * (3 * R**2 + H**2 )}"
            izz="${0.5 * (mass * R**2 )}"
            ixy="0" ixz="0" iyz="0" />
    </xacro:macro>
    <link name="base_link" />

    <link name="chassis-link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="${chassis_length} ${chassis_width} ${chassis_height}" />
            </geometry>
            <material name="brown">
                <color rgba="0.3 0 0.4 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="${chassis_length} ${chassis_width} ${chassis_height}" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.4" />
            <inertia ixx="0.00048333" iyy="0.0013367" izz="0.0018133"
                ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>

    <joint name="joint-base-chassis" type="fixed">
        <parent link="base_link" />
        <child link="chassis-link" />
        <origin xyz="0 0 ${wheel_radius}" rpy="0 0 0" />
    </joint>


    <material name="blue">
        <color rgba="0 0.4 0.5 1" />
    </material>

    <xacro:macro name="wheel" params="x_position y_position x_reflect y_reflect">
        <!-- ${x_position}-${y_position}-wheel-link -->
        <link name="${x_position}-${y_position}-wheel-link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi * 0.5} 0 0" />
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_height}" />
                </geometry>
                <material name="blue" />
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="${pi * 0.5} 0 0" />
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_height}" />
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0 0 0" rpy="${pi * 0.5} 0 0" />
                <mass value="${wheel_mass}" />
                <xacro:cylinder_inertia mass="${wheel_mass}" R="${wheel_radius}" H="${wheel_height}" />
            </inertial>
        </link>
        <joint name="joint-chassis-${x_position}-${y_position}-wheel" type="continuous">
            <parent link="chassis-link" />
            <child link="${x_position}-${y_position}-wheel-link" />
            <origin
                xyz="${x_reflect*0.3*chassis_length} ${y_reflect*(chassis_width/2+wheel_height/2)} 0"
                rpy="0 0 0" />
            <axis xyz="0 1 0" />
        </joint>
    </xacro:macro>

    <xacro:wheel x_position="front" y_position="right" x_reflect="1" y_reflect="1" />
    <xacro:wheel x_position="front" y_position="left" x_reflect="1" y_reflect="-1" />
    <xacro:wheel x_position="rare" y_position="right" x_reflect="-1" y_reflect="1" />
    <xacro:wheel x_position="rare" y_position="left" x_reflect="-1" y_reflect="-1" />
</robot>